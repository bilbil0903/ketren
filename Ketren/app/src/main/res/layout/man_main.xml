<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:background="#FFFFFFFF"
	android:gravity="top|center">

	<com.ketren.kino.MyImageView
		android:layout_width="120dp"
		android:layout_height="120dp"
		android:text="Button"
		android:layout_marginTop="42dp"
		android:background="@drawable/ic_launcher"
		android:id="@+id/bax"
		android:onClick="image"/>

	<com.ketren.kino.UyEditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_marginTop="10dp"
		android:hint="ئ‍ەزالىق نامىڭىز"
		android:id="@+id/user"
		android:lines="1"/>


	<com.ketren.kino.UyEditText
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:hint="يىڭى پارولىڭىز"
		android:id="@+id/parol2"
		android:lines="1"/>

	<com.ketren.kino.UyButton
		android:layout_width="match_parent"
		android:layout_height="50dp"
		android:text="ئ‍ۆزگەرتىش"
		android:background="@drawable/taglik"
		android:layout_marginTop="10dp"
		android:lines="1"
		android:layout_marginRight="40dp"
		android:layout_marginLeft="40dp"
		android:onClick="ok"
		android:textColor="#FFFFFFFF"/>

</LinearLayout>

