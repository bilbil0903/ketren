								android:layout_weight="1.0">

								<ImageView
									android:layout_gravity="center"
									android:layout_height="match_parent"
									android:layout_width="30dp"
									android:src="@drawable/kursatkuq_left"/>

							</LinearLayout>

							<LinearLayout
								android:layout_height="match_parent"
								android:layout_width="wrap_content"
